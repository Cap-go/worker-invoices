{
  "name": "invoice-sender",
  "main": "src/index.ts",
  "compatibility_date": "2025-04-01",
  "route": {
    "pattern": "invoices.capgo.app",
    "custom_domain": true
  },
  "compatibility_flags": [
    "nodejs_compat_v2"
  ],
  "vars": {
    "SMTP_HOST": "",
    "SMTP_PORT": "",
    "SMTP_USERNAME": "",
    "SMTP_PASSWORD": "",
    "SMTP_FROM": "",
    "STRIPE_API_KEY": "",
    "CF_WORKER_DOMAIN": ""
  },
  "kv_namespaces": [
    { "binding": "INVOICE_DB", "id": "your-kv-namespace-id" }
  ],
  "triggers": {
    "crons": [
      "* * * * *"
    ]
  }
} 
