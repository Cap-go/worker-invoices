{
  "name": "invoice-sender",
  "main": "src/index.ts",
  "compatibility_date": "2025-04-01",
  "route": {
    "pattern": "invoices.capgo.app",
    "custom_domain": true
  },
  "compatibility_flags": [
    "nodejs_compat_v2"
  ],
  "vars": {
    "SMTP_HOST": "smtp.resend.com",
    "SMTP_PORT": "587",
    "SMTP_USERNAME": "resend",
    "SMTP_SECURE": "true",
    "SMTP_PASSWORD": "",
    "SMTP_FROM": "Capgo <noreply@capgo.app>",
    "STRIPE_API_KEY": "",
    "CF_WORKER_DOMAIN": "invoices.capgo.app"
  },
  "kv_namespaces": [
    { "binding": "INVOICE_DB", "id": "your-kv-namespace-id" }
  ],
  "triggers": {
    "crons": [
      "* * * * *"
    ]
  }
} 
